{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "require-jsdoc" : 0,
        "max-len": ["error", {"code": 120}],
        "new-cap": [
            "error",
            {
                  "capIsNew": true,
                  "capIsNewExceptions": [
                        "Directive",
                        "Component",
                        "NgModule"
                ],
                "newIsCap": true,
                "properties": true
            }
        ],
        "linebreak-style": 0
    }
}
